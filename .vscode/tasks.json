{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "g++: build active file",
      "type": "shell",
      "command": "g++",
      "args": [
        "-ggdb",
        "-O0",
        "-Wall",
        "-Wextra",
        "-Werror",
        "-pedantic",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": { "cwd": "${fileDirname}" },
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true },
      "detail": "compiler: g++ (WSL)"
    }
  ]
}